{% extends 'base.html.twig' %}

{% block title %}Refuge de St brès pour équidés{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/cards.css')}}">
    <link rel="stylesheet" href="{{asset('css/index.css')}}">
{% endblock %}


{% block body %}

<div class="wrapper">
{% include 'components/header.html.twig' %}
<div class="aside">
{% include 'components/aside.html.twig'%}
</div>
        
<main class="main">
    <h2>Découvrez nos petits protégées</h2>

        <div class="cards">

        {% for pensionnaire in pensionnaires %}
        <a href="{{ path('app_details_pensionnaires', {'id': pensionnaire.id}) }}">
        <img src="{{ asset('' ~ pensionnaire.getImagePensionnaire()) }}" alt="carousel-img" class="card" />  
        {% endfor %}
</div>  
    {% include 'components/carousel.html.twig'%}
</main>

{% include 'components/footer.html.twig' %}   
</div>

{% endblock %}